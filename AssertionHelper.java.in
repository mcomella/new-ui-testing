package @ANDROID_PACKAGE_NAME@.tests;

import @ANDROID_PACKAGE_NAME@.Assert;

final class AssertionHelper {
    private static Assert mAsserter;

    private AssertionHelper() { }

    public static void init(final UITestContext testContext) {
        mAsserter = testContext.getAsserter();
    }

    public static void assertEquals(final Object expected, final Object actual) {
        // TODO: name.
        mAsserter.is(expected, actual, "");
    }

    public static void assertFalse(final boolean actual) {
        assertTrue(!actual);
    }

    public static void assertTrue(final boolean actual) {
        // TODO: Figure out what to do with name and diag fields.
        mAsserter.ok(actual, "", "");
    }
}
