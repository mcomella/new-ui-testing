package @ANDROID_PACKAGE_NAME@.tests;

/* Test correct state for URL bar after loading pages.
 */
public class testNewTabHistory extends UITest {
    // TODO: Fix hasUrl?
    public void testNewTabHistory() {
        CommonUseHelper.blockForGeckoReady();

        CommonUseHelper.enterAndLoadUrl(CommonUseHelper.BLANK01_URL);
        assertTrue(TOOLBAR.hasTitle(CommonUseHelper.BLANK01_TITLE));
        //assertTrue(TOOLBAR.hasUrl(CommonUseHelper.BLANK01_URL));

        CommonUseHelper.enterAndLoadUrl(CommonUseHelper.BLANK02_URL);
        assertTrue(TOOLBAR.hasTitle(CommonUseHelper.BLANK02_TITLE));
        //assertTrue(TOOLBAR.hasUrl(CommonUseHelper.BLANK02_URL));

        CommonUseHelper.enterAndLoadUrl(CommonUseHelper.BLANK03_URL);
        assertTrue(TOOLBAR.hasTitle(CommonUseHelper.BLANK03_TITLE));
        //assertTrue(TOOLBAR.hasUrl(CommonUseHelper.BLANK03_URL));

        CommonUseHelper.goBack();
        assertTrue(TOOLBAR.hasTitle(CommonUseHelper.BLANK02_TITLE));
        //assertTrue(TOOLBAR.hasUrl(CommonUseHelper.BLANK02_URL));

        CommonUseHelper.goBack();
        assertTrue(TOOLBAR.hasTitle(CommonUseHelper.BLANK01_TITLE));
        //assertTrue(TOOLBAR.hasUrl(CommonUseHelper.BLANK01_URL));

        CommonUseHelper.goForward();
        assertTrue(TOOLBAR.hasTitle(CommonUseHelper.BLANK02_TITLE));
        //assertTrue(TOOLBAR.hasUrl(CommonUseHelper.BLANK02_URL));

        CommonUseHelper.reload();
        assertTrue(TOOLBAR.hasTitle(CommonUseHelper.BLANK02_TITLE));
        //assertTrue(TOOLBAR.hasUrl(CommonUseHelper.BLANK02_URL));
    }
}
